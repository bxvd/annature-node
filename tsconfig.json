{
  "compilerOptions": {
    "lib": ["ES2021"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "ES2020",
    "allowJs": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src"
  }
}
